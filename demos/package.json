{
    "name": "igniteui-angular-demos",
    "version": "0.1.0",
    "scripts": {
        "build:aot": "npm run build:aot:compile && npm run build:aot:bundle",
        "build:aot:bundle": "webpack --config webpack-aot.config.js --bail",
        "build:aot:compile": "ngc -p tsconfig-aot.json",
        "build:jit": "npm run build:assets && webpack --config webpack.config.js --bail",
        "copy-style": "copyfiles --up 2 \"lib/styles/*.css\" style",
        "copy-images": "copyfiles --up 1 \"images/**/*\" dist/images",
        "copy-lib": "copyfiles --up 2 \"../dist/**/*\" lib",
        "build:assets": "rimraf dist && npm run copy-images",
        "prestart": "rimraf lib && npm run copy-lib && copyfiles --up 2 \"lib/styles/*.css\" style",
        "start": "concurrently --raw --kill-others \"gulp copy-lib:watch\" \"webpack-dev-server --open --watch --config webpack.config.js\"",
        "start:public": "concurrently --raw --kill-others \"gulp copy-lib:watch\" \"webpack-dev-server --host 0 --open --watch --config webpack.config.js\""
    },
    "dependencies": {
        "@angular/animations": "^6.0.0",
        "@angular/common": "^6.0.0",
        "@angular/core": "^6.0.0",
        "@angular/forms": "^6.0.0",
        "@angular/http": "^6.0.0",
        "@angular/platform-browser": "^6.0.0",
        "@angular/platform-browser-dynamic": "^6.0.0",
        "@angular/router": "^6.0.0",
        "@fortawesome/fontawesome-free-webfonts": "^1.0.4",
        "jszip": "^3.1.5",
        "rxjs-compat": "^6.1.0"
    },
    "devDependencies": {
        "@angular/compiler": "^6.0.0",
        "@angular/compiler-cli": "^5.0.0",
        "@types/node": "^8.0.47",
        "angular2-template-loader": "^0.6.2",
        "autoprefixer": "^8.0.0",
        "awesome-typescript-loader": "^3.3.0",
        "concurrently": "^3.5.0",
        "copyfiles": "^1.2.0",
        "core-js": "^2.5.1",
        "css-loader": "^0.28.7",
        "file-loader": "^1.1.5",
        "gulp": "^3.9.1",
        "html-webpack-plugin": "^2.30.1",
        "node-sass": "^4.9.0",
        "postcss-loader": "^2.1.0",
        "raw-loader": "^0.5.1",
        "rimraf": "^2.6.2",
        "rxjs": "^6.1.0",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.20.1",
        "svg-inline-loader": "^0.8.0",
        "to-string-loader": "^1.1.5",
        "typescript": "2.7.2",
        "webpack": "^3.11.0",
        "webpack-dev-server": "^2.9.4",
        "zone.js": "^0.8.26"
    }
}
